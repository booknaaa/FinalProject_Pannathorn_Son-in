<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="icon" type="image/png" href="/images/icons8-p-64.png">
    <title>Detail Instrument</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/stylesheets/member.css" rel="stylesheet">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 0px solid #ddd;
            padding: 8px;
            text-align: center;
        }
        .center {
            text-align: center;
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

   <%- include('include/post/_sidebarpost.ejs') %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <%- include('include/post/_barpost.ejs') %>
                <!-- Begin Page Content -->
                <div class="container-fluid">

                   
      <!-- Main Content -->
      <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <!-- Content Row -->
            <div class="row">

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        ID :</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800"><%= post.id %></div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Instrument Name :</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800"><%= post.title %></div>
                                    <div class="h6 mb-0 font-weight-bold text-gray-600"><%= post.content  %></div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-id-card fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                 <!-- Earnings (Monthly) Card Example -->
                 <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        PORT / BAUDRATE</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800"><%= post.port  %> / <%=post.baudrate %></div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-id-card fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Pending Requests Card Example -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        วันที่ :  </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800"><div id="dateContainer"></div></div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-8 col-lg-8">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">PROFILE</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                                <p><strong>ID :</strong> <%= post.id %></p>
                                <p><strong>Instrument Name :</strong> <%= post.title %></p>
                                <p><strong>Content :</strong> <%= post.content %></p>
                                <p><strong>UserId :</strong> <%= post.userId %></p>
                                <p><strong>Port :</strong> <%= post.port %></p>
                                <p><strong>Baudrate :</strong> <%= post.baudrate %></p>
                                <p><strong>createdAt :</strong> <%= post.createdAt.toDateString() %> <%= post.createdAt.toLocaleTimeString() %></p>
                                <p><strong>updatedAt :</strong> <%= post.updatedAt.toDateString() %> <%= post.updatedAt.toLocaleTimeString() %></p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">EDIT PROFILE</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <form Class = "ROW" action="/process" method="post" id="dataForm">
                                <a class=" btn btn-sm btn-primary shadow-sm" type="submit" id="submitButton" >Edit</a>
                                </form>
                           
                            <div id="dataInputContainer" style="display: none;">
                                <% if (post) { %>   
                                    <form action="/home/edit/<%= post.id %>" method="POST">
                                      <label for="floatingInput">Title</label>
                                      <input class="form-control" name="title" placeholder="Edit Username..."aria-label="Default select example" required></input>
                                      <label for="floatingInput">Content</label>
                                      <input  class="form-control" name="content" placeholder="Edit Firstname..."aria-label="Default select example" required></input>                               
                                      <br>
                                      <button type="submit" class=" btn btn-sm btn-primary shadow-sm">Submit</button>    
                                    </form>
                                    <% } %>
                                  </div>
                     
                                  <br>
                            <form action="/home/delete/<%= post.id %>" method="POST">
                              <button class=" btn btn-sm btn-danger shadow-sm" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div
                            class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h5 class="m-0 font-weight-bold text-primary">EDIT CONNECTION</h5>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <form Class = "ROW" action="/process" method="post" id="dataForm">
                                <a class=" btn btn-sm btn-primary shadow-sm" type="submit" id="submitButton1" >Edit</a>
                                </form>
                           
                            <div id="dataInputContainer1" style="display: none;">
                                <% if (post) { %>   
                                    <form action="/home/edit/connec/<%= post.id %>" method="POST">
                                      <label for="floatingInput">Port</label>
                                      <input class="form-control" name="port" placeholder="Edit Port..."aria-label="Default select example" required></input>
                                      <label for="floatingInput">Baudrate</label>
                                      <input  class="form-control" name="baudrate" placeholder="Edit Baudrate..."aria-label="Default select example" required></input>
                                      <br>
                                      <button type="submit" class=" btn btn-sm btn-primary shadow-sm">Submit</button>    
                                    </form>
                                    <% } %>
                                  </div>
                     
                                  <br>
                            <form action="/home/delete/<%= post.id %>" method="POST">
                              <button class=" btn btn-sm btn-danger shadow-sm" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                      <% post.instruments.sort((a, b) => a.id - b.id).forEach(item => { %>
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-sm font-weight-bold text-primary text-uppercase mb-2">Function : <%= item.id %> 
                                            </div>
                                            <div class="row no-gutters align-items-center">
                                                <div class="col-auto">
                                                    <div class="h3 mt-1 mb-0 mr-3 font-weight-bold text-dark-800"><%= item.funcname %></div>
                                                </div>
                                            </div>
                                            <div class="row no-gutters align-items-center">
                                            <div class="col-auto">
                                                <div class="h5 mt-2 ml-0 font-weight-bold text-gray-800">  <%= item.func %>  </div>
                                              </div>
                                            </div>                        
                                        </div>
                                        
                                        <div class="col-auto">
                                            <a class="nav-item active">
                                                <a class="nav-link" href="/home/dashboard/data/<%= item.id %>">
                                                    <i class="mt-4 mr-0 fas fa-cog fa-2x text-gray-800"></i>
                                                  </a>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      <% }); %>
                    </ul>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-2">
                                            Add Function</div>
                                        <div class="h5 mb-0 font-weight-bold text-success"> 
                                            <form Class = "ROW" action="/process" method="post" id="dataForm">
                                                <i class="fas fa-plus fa-2x " type="submit" id="submitButton2" > </i>
                                                </form>
                                                <br>
                                            <div id="dataInputContainer2" style="display: none;">
                                                <% if (post) { %>   
                                                    <form action="/home/<%= post.id %>/function/post" method="POST">
                                                        <label for="floatingInput">Function Name</label>
                                                        <input  class="form-control" name="funcname" placeholder="Function Name..."aria-label="Default select example" required></input>
                                                        <label for="floatingInput">Command</label>
                                                        <textarea  class="form-control" name="func" placeholder="Command..."aria-label="Default select example" ></textarea>
                                                      <br>
                                                        <button type="submit" width="20%" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">Add Instrument</button>    
                                                    </form>
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                      
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    </div>
    <!-- End of Main Content -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if are ready to end your current session.</div>
                <div class="modal-footer">  
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <form action="/user/logout" method="post">
                        <button class="btn btn-danger">Logout</button>
                    </form>  
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/javascripts/sb-admin-2.min.js"></script>

    <script>
        // สร้างวันที่ในรูปแบบที่กำหนดเอง
        var currentDate = new Date();
        var year = currentDate.getFullYear();
        var month = currentDate.getMonth() + 1; // เดือนเริ่มต้นจาก 0
        var day = currentDate.getDate();
      
        // แสดงวันที่ใน element HTML
        var dateContainer = document.getElementById("dateContainer");
        dateContainer.innerHTML = day + "/" + month + "/" + year ;
      </script>
 <script>
  const submitButton = document.getElementById('submitButton');
  const dataInputContainer = document.getElementById('dataInputContainer');

  submitButton.addEventListener('click', function() {
      if (dataInputContainer.style.display === 'none') {
          dataInputContainer.style.display = 'block';
      } else {
          dataInputContainer.style.display = 'none';
      }
  });
</script>
<script>
    const submitButton1 = document.getElementById('submitButton1');
    const dataInputContainer1 = document.getElementById('dataInputContainer1');
  
    submitButton1.addEventListener('click', function() {
        if (dataInputContainer1.style.display === 'none') {
            dataInputContainer1.style.display = 'block';
        } else {
            dataInputContainer1.style.display = 'none';
        }
    });
  </script>
  <script>
    const submitButton2 = document.getElementById('submitButton2');
    const dataInputContainer2 = document.getElementById('dataInputContainer2');
  
    submitButton2.addEventListener('click', function() {
        if (dataInputContainer2.style.display === 'none') {
            dataInputContainer2.style.display = 'block';
        } else {
            dataInputContainer2.style.display = 'none';
        }
    });
  </script>
</body>

</html>