     <!-- Main Content -->
     <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <!-- Content Row -->
            <div class="row">

                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Username :</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= user.username %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-user fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    
                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            Firstname / Lastname :</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= user.first_name %>&nbsp;<%= user.last_name  %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-id-card fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    
                     <!-- Earnings (Monthly) Card Example -->
                     <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                            ROLE :</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= user.role  %></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-id-card fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Pending Requests Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                            วันที่ :  </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800"><div id="dateContainer"></div></div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-8">
                        <div class="card shadow mb-4">
                            <!-- Card Header - Dropdown -->
                            <div
                                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h5 class="m-0 font-weight-bold text-black">Edit Instruments</h5>
                            </div>                      
                            <div class="card-body">
                                <table style="text-align:center">
                                    <tr>
                                      <th>ID</th>
                                      <th>INSRUMENT NAME</th>
                                      <th>CONTENT</th>
                                      <th>USERID</th>
                                      <th>PORT</th>
                                      <th>BAUDRATE</th>
                                      <th>CREATEDAT</th>
                                      <th>UPDATEDAT</th>
                                      <th>EDIT</th>
                                    </tr>
                                    <% if (post) { %>
                                        <% post.sort((a, b) => a.id - b.id).forEach(post => { %>
                                    <tr>
                                      <th><%= post.id %></th>         
                                      <th><%= post.title %></th>
                                      <th><%= post.content %></th>
                                      <th><%= post.userId %></th>
                                      <th><%= post.port %></th>
                                      <th><%= post.baudrate %></th>
                                      <th><%= post.createdAt.toDateString() %><br> <%= post.createdAt.toLocaleTimeString() %></th>
                                      <th><%= post.updatedAt.toDateString() %><br> <%= post.updatedAt.toLocaleTimeString() %></th>
                                      <th><div class="form-row">                                 
                                        <div class="col-md-auto ml-3 mt-2">
                                            <form action="/home/<%= post.id %>" method="GET">
                                                <button class=" btn btn-sm btn-info shadow-sm" type="submit">Visit</button>
                                              </form>       
                                        </div>
                                        <div class="col-md-auto  mt-2   ">
                                    <form action="/admin/instruments/delete/<%= post.id %>" method="POST">
                                      <button class=" btn btn-sm btn-danger shadow-sm" type="submit">Delete</button>
                                    </form>
                                        </div>
                                        </div><br></th>
                                    </tr>
                                    <% }); %>
                                    <% } %>
                                    
                                    <tr>
                                        <form action="/admin/instruments/post" method="POST">                                                                                                                 
                                        <th> </input></th>
                                        <th><input size="1" class="form-control" name="title" placeholder="title"aria-label="Default select example" required></input></th>
                                        <th><input size="1" class="form-control" name="content" placeholder="content"aria-label="Default select example" required></input></th>
                                        <th></th>
                                        <th><input size="1" class="form-control" name="port" placeholder="port"aria-label="Default select example" required></input></th>
                                        <th><input size="1" class="form-control" name="baudrate" placeholder="baudrate"aria-label="Default select example" required></input></th>
                                        <th></th>
                                        <th></th>
                                        <th><button type="submit" class=" btn btn-sm btn-primary shadow-sm">Submit</button>   </th> 
                                      </tr>
                                    </form>   
                                    </table>
                                </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-12 col-lg-8">
                                <div class="card shadow mb-4">
                                    <!-- Card Header - Dropdown -->
                                    <div
                                        class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h5 class="m-0 font-weight-bold text-black">Edit Fuction</h5>
                                    </div>                      
                                    <div class="card-body">
                                        <table style="text-align:center">
                                            <tr>
                                              <th>ID</th>
                                              <th>FUCTION NAME</th>
                                              <th style="width: 10%;">COMMAND</th>
                                              <th>VALUE</th>
                                              <th>INSTRUMENTID</th>
                                              <th>PORT</th>
                                              <th>BAUDRATE</th>
                                              <th>COUNT</th>
                                              <th>CREATEDAT</th>
                                              <th>UPDATEDAT</th>
                                              <th>EDIT</th>
                                            </tr>
                                            <% if (func) { %>
                                                <% func.sort((a, b) => a.id - b.id).forEach(item => { %>
                                            <tr>
                                              <th><%= item.id %></th>         
                                              <th><%= item.funcname %></th>
                                              <th style="background-color: black;"><code><%= item.func %></code></th>
                                              <th><%= item.value %></th>
                                              <th><%= item.postId %></th>
                                              <th><%= item.portId %></th>
                                              <th><%= item.baudrateId %></th>
                                              <th><%= item.count %></th>
                                              <th><%= item.createdAt.toDateString() %><br> <%= item.createdAt.toLocaleTimeString() %></th>
                                              <th><%= item.updatedAt.toDateString() %><br> <%= item.updatedAt.toLocaleTimeString() %></th>
                                              <th><div class="form-row">                                 
                                                <div class="col-md-auto ml-3 mt-2">
                                                    <form action="/home/<%= post.id %>" method="GET">
                                                        <button class=" btn btn-sm btn-info shadow-sm" type="submit">Visit</button>
                                                      </form>       
                                                </div>
                                                <div class="col-md-auto  mt-2   ">
                                            <form action="/admin/instruments/func/delete/<%= item.id %>" method="POST">
                                              <button class=" btn btn-sm btn-danger shadow-sm" type="submit">Delete</button>
                                            </form>
                                                </div>
                                                </div><br></th>
                                            </tr>
                                            <% }); %>
                                            <% } %>
                                            
                                            <tr>
                                                <form action="/admin/instruments/func/post" method="POST">                                                                                                                 
                                                <th> </input></th>
                                                <th><input size="1" class="form-control" name="funcname" placeholder="functionName"aria-label="Default select example" required></input></th>
                                                <th><input size="1" class="form-control" name="func" placeholder="Command"aria-label="Default select example" required></input></th>
                                                <th></th> 
                                                <th><input size="1" class="form-control" name="postId" placeholder="instrumentID"aria-label="Default select example" required></input></th>
                                                <th><input size="1" class="form-control" name="portId" placeholder="port"aria-label="Default select example" required></input></th>
                                                <th><input size="1" class="form-control" name="baudrateId" placeholder="baudrate"aria-label="Default select example" required></input></th>
                                                <th><input size="1" class="form-control" name="count" value="50" placeholder="count"aria-label="Default select example"></input></th>
                                                <th></th>
                                                <th></th>
                                                <th><button type="submit" class=" btn btn-sm btn-primary shadow-sm">Submit</button>   </th> 
                                              </tr>
                                            </form>   
                                            </table>
                                        </div>
                                </div>
         
           
    </div>
    <!-- End of Main Content -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if are ready to end your current session.</div>
                <div class="modal-footer">  
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <form action="/user/logout" method="post">
                        <button class="btn btn-danger">Logout</button>
                    </form>  
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/javascripts/sb-admin-2.min.js"></script>

    <script>
        // สร้างวันที่ในรูปแบบที่กำหนดเอง
        var currentDate = new Date();
        var year = currentDate.getFullYear();
        var month = currentDate.getMonth() + 1; // เดือนเริ่มต้นจาก 0
        var day = currentDate.getDate();
      
        // แสดงวันที่ใน element HTML
        var dateContainer = document.getElementById("dateContainer");
        dateContainer.innerHTML = day + "/" + month + "/" + year ;
      </script>
 <script>
