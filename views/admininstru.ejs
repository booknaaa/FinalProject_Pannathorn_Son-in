</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

      <%- include('include/admin/_sidebar') %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <%- include('include/admin/bar/_barins') %>
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <!--<div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800"><%= user.title %></h1></h1>
                        <a href="/home/Dashboard/<%= user.id %>" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
