</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('include/admin/_sidebar') %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <%- include('include/admin/bar/_bardash') %>
                <!-- Begin Page Content -->
                <div class="container-fluid">

                   
      <!-- Main Content -->
    <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">
            <% postall.sort((a, b)=> a.id - b.id).forEach(post => { %>
                <!-- Content Row -->
                <div class="row">
    
                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            ID :</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            <%= post.id %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-user fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    
                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                            Instrument Name :</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            <%= post.title %>
                                        </div>
                                        <div class="h6 mb-0 font-weight-bold text-gray-600">
                                            <%= post.content %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-id-card fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
    
                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                            PORT / BAUDRATE</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            <%= post.port %> / <%=post.baudrate %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-id-card fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Pending Requests Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                            วันที่ : </div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                                            <div id="dateContainer"></div>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% post.instruments.sort((a, b) => a.id - b.id).forEach(item => { %>
                    <div class="row">
                        <div class="col-xl-8 col-lg-8">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h5 class="m-0 font-weight-bold text-black">DASHBOARD <%= post.id %>.<%= post.title %> <%= item.id %>.<%= item.funcname %> </h5>
                                <div class="dropdown no-arrow">
                                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-primary"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                        aria-labelledby="dropdownMenuLink">
                                        <div class="dropdown-header">Dropdown :</div>
                                        <form method="POST" action="/admin/post/<%= item.id %>">
                                            <button class=" dropdown-item" type="submit">Action</button>
                                        </form>
                                        <form method="POST" action="/admin/delete/<%= item.id%>">
                                            <button class=" dropdown-item" type="submit">Delete</button>
                                        </form>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="/home/dashboard/data/<%= item.id %>">Visit</a>
                                    </div>
                                </div>
                            </div>
                                <!-- Card Body -->
                                <div class="card-body" style=" height: 15rem; overflow: auto;">
                                    <table style="text-align:center">
                                        <tr>
                                          <th>ID</th>
                                          <th>VALUE</th>
                                          <th>CREATED AT</th>
                                        </tr>
                                        <% item.values.sort((a, b) => a.id - b.id).forEach(value => { %>
                                        <tr>
                                             <td><%= value.countId  %></td>
                                          <td><%= value.datavalue  %></td>
                                          <td><%= value.createdAt.toDateString() %> <%= value.createdAt.toLocaleTimeString() %></td>
                                        </tr>
                                        <% }); %>
                                      </table>
                                </div>
                            </div>
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h5 class="m-0 font-weight-bold text-primary">CHART ID:<%= item.id %>  <%= item.func %></</h5></h5>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                        <canvas id="chart-<%= item.id %>"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-4">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h5 class="m-0 font-weight-bold text-black">REALTIME</h5>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <%= item.value%>
                                </div>
                            </div>
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h5 class="m-0 font-weight-bold text-black">FUNCTOIN</h5>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body" style="background-color:rgb(0, 0, 0);">
                                     <code><%= item.func %></code>
                                </div>
                            </div>
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h5 class="m-0 font-weight-bold text-black">DETAIL</h5>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <b>FUNCTION :</b>     <%= item.id %>   <%= item.funcname %><br>
                                    <b>INSTRUMENT :</b>     <%= post.id %>   <%= post.title %><br>
                                    <b>COUNT :</b>     <%= item.count %><br>
                                    <b>PORT :</b>     <%= item.portId %><br>
                                    <b>BAUDRATE :</b> <%= item.baudrateId %>  
                                </div>
                            </div>
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div
                                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                    <h6 class="m-0 font-weight-bold text-black">EDIT</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="form-row">
                                        <div class="col-md-auto">
                                            <form action="/home/<%= item.id %>/function/countdash" method="POST">
                                                <div class="form-row">
                                                    <div class="col-auto">
                                                    <input class="form-control" style="width: 60px;" type="number" name="count" id="numberInput" placeholder="<%= item.count %>" required>
                                                </div><div class="col-auto">
                                                    <button class=" btn btn-sm btn-primary shadow-sm" type="submit">Count</button>
                                            </div>
                                            </div>
                                            </form>     
                                        </div>
                                        <div class="col-md-auto">
                                            <form action="/admin/post/<%= item.id %>" method="POST">
                                                <button class=" btn btn-sm btn-warning shadow-sm" type="submit">Start</button>
                                              </form>       
                                        </div>
                                        <div class="col-md-auto">
                                            <form action="/home/dashboard/data/<%= item.id %>" method="GET">
                                                <button class=" btn btn-sm btn-info shadow-sm" type="submit">Visit</button>
                                              </form>       
                                        </div>
                                        <div class="col-md-auto">
                                    <form action="/home/<%= item.id %>/function/delete" method="POST">
                                      <button class=" btn btn-sm btn-danger shadow-sm" type="submit">Delete</button>
                                    </form>
                                        </div>
                                        </div>
                                </div>
                            </div>
                        </div>
         
                    </div>
                    
                    <% }); %>





                <% }); %>
        </div>
  


    <!-- End of Main Content -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if are ready to end your current session.</div>
                <div class="modal-footer">  
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <form action="/user/logout" method="post">
                        <button class="btn btn-danger">Logout</button>
                    </form>  
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/javascripts/sb-admin-2.min.js"></script>

    <script>
        // สร้างวันที่ในรูปแบบที่กำหนดเอง
        var currentDate = new Date();
        var year = currentDate.getFullYear();
        var month = currentDate.getMonth() + 1; // เดือนเริ่มต้นจาก 0
        var day = currentDate.getDate();
      
        // แสดงวันที่ใน element HTML
        var dateContainer = document.getElementById("dateContainer");
        dateContainer.innerHTML = day + "/" + month + "/" + year ;
      </script>
